      //   "--firefly-kubeconfig",
      //   "/root/.kube/config",
      //   "--karmada-name",
      //   "demo1"
      // ],
      "env": {
        "ESTIMATOR_NAMESPACE": "firefly-system"
      }
    }
  ]
