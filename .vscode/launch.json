  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/firefly-controller-manager",
      "args": [
        "--kubeconfig",
        "/root/.kube/config",
        "--authentication-kubeconfig",
        "/root/.kube/config",
        "--authorization-kubeconfig",
        "/root/.kube/config",
      ],
